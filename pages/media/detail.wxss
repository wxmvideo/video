/* 首次提示 */
	
.grace-guide {
  position: absolute;
  top: 400rpx;
  width: 500rpx;
  left: calc(50% - 250rpx);
  text-align: center;
}

.grace-alert {
  width: 500rpx;
  font-size: 30rpx;
  position: absolute;
  top: 200rpx;
  left: 0;
  color: #ffffff;
}

.grace-guide .grace-button {
  position: absolute;
  top: 400rpx;
  width: 160rpx;
  left: calc(50% - 80rpx);
  border-radius: 200rpx;
}

.grace-chevron {
  position: absolute;
  width: 80rpx;
  height: 15rpx;
  opacity: 0;
  transform: scale3d(0.5, 0.5, 0.5);
  animation: move 3s ease-out infinite;
  left: calc(50% - 40rpx);
}

.grace-chevron:first-child {
  animation: move 3s ease-out 1s infinite;
}

.grace-chevron:nth-child(2) {
  animation: move 3s ease-out 2s infinite;
}

.grace-chevron:before,
.grace-chevron:after {
  content: ' ';
  position: absolute;
  top: 0;
  height: 100%;
  width: 51%;
  background: #fff;
}

.grace-chevron:before {
  left: 0;
  transform: skew(0deg, 30deg);
}

.grace-chevron:after {
  right: 0;
  width: 50%;
  transform: skew(0deg, -30deg);
}

@keyframes move {
  25% {
    opacity: 1;
  }

  33% {
    opacity: 1;
    transform: translateY(60rpx);
  }

  67% {
    opacity: 1;
    transform: translateY(80rpx);
  }

  100% {
    opacity: 0;
    transform: translateY(120rpx) scale3d(0.5, 0.5, 0.5);
  }
}


/*停止提示*/
	
.box-stop{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 8888888;
}
.box-stop .stop-tips{
  position: absolute;
  width:600rpx;
  box-sizing: border-box;
  left: 75rpx;
  text-align: center;
  overflow: hidden;
  top: calc(50% - 260rpx);
  z-index: 999999999;
  color: #fbdda4;
  border: 2rpx solid #fbdda4;
  border-radius: 8rpx;
  padding: 30rpx;
  font-size: 40rpx;
  background: rgba(0,0,0,0.4);
}
.box-stop .stop-inner{
  position: absolute;
  height: 260rpx;
  text-align: center;
  overflow: hidden;
  top: calc(50%);
  width: 100%;
  z-index: 999999999;
}
.box-stop .stop-play{
  width: 50%;
  float: left;
  height: 260rpx;
  text-align: center;
}
.box-stop .stop-share{
  width: 50%;
  float: left;
  height: 260rpx;
  text-align: center;
  background-color: rgba(0,0,0,0);
}
.box-stop .stop-share::after{
  display: none!important;
}
.box-stop .stop-icon{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx auto;
  display: block;
}
.box-stop .stop-text{
  font-size: 40rpx;
  color: #FFFFFF;
}
.box-stop .stop-icon-share{
  -webkit-animation: free_download 0.6s linear alternate infinite;
  animation: free_download 0.6s linear alternate infinite;
}

.grace-follow {
  padding: 20rpx 25rpx;
  background-color: #FFFFFF;
}
.grace-reward{
  position: fixed;
  right: 20rpx;
  top: 40%;
  width: 80rpx;
  height: 100rpx;
  z-index: 9999999;
  -webkit-animation: free_download 0.6s linear alternate infinite;
  animation: free_download 0.6s linear alternate infinite;
}
.fixed-text{
  position: absolute;
  top: 300rpx;
  left: 0;
