}

.grace-tomall button {
  height: 70rpx;
  width: 260rpx;
  line-height: 74rpx;
  font-size: 32rpx;
}

.grace-tomall button::before {
  margin-right: 10rpx;
}

.grace-tomall button::after {
  display: none;
}

/*播放器*/

.media-player {
  width: 100%;
  background: #000000;
  box-sizing: border-box;
  min-height: 500rpx;
}

.media-player > tvc-player {
